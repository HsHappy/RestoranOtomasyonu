@model RestoranOtomasyonu.Models.Table
@{
    ViewBag.Title = "Yeni Masa Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Masa Ekle</h2>
<br />

@using (Html.BeginForm("Create", "Table", FormMethod.Post))
{
    <div class="form-group">
        <label>Masa Numarası (Örn. Masa 1, Teras 1)</label>
        @Html.TextBoxFor(m => m.TableNumber, new { @class = "form-control" })
    </div>
    <br />
    <button class="btn btn-primary">Masayı Kaydet</button>
}
