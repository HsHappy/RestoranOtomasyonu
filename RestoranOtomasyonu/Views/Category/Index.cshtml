@model IEnumerable<RestoranOtomasyonu.Models.Category>
@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>"Kategori Listesi"</h2>
<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>
                    <a href="/Category/Delete/@item.CategoryId" class="btn btn-danger">Sil</a>
                    <a href="/Category/Update/@item.CategoryId" classa="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Category/Create" class="btn btn-primary">Yeni Kategori Ekle</a>
