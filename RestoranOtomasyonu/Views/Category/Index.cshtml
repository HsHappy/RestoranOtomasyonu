@model IEnumerable<RestoranOtomasyonu.Models.Category>
@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="/Home/Index" class="btn btn-default btn-lg" style="margin-bottom: 20px;">
    🔙 Ana Menü
</a>

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">

    <h2 style="margin: 0;">Kategori Listesi</h2>

    <a href="/Category/Create" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus"></span> Yeni Kategori Ekle
    </a>
</div>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>
                    <a href="/Category/Delete/@item.CategoryId" class="btn btn-danger">Sil</a>
                    <a href="/Category/Update/@item.CategoryId" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>


